<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.timekeeping.data.Time" />


        <import type="com.timekeeping.app.adapters.TimeKeepingListAdapter.GridItemHandler" />

        <import type="com.timekeeping.app.adapters.TimeKeepingListAdapter" />

        <variable
            name="time"
            type="Time" />

        <variable
            name="adp"
            type="TimeKeepingListAdapter" />

        <variable
            name="position"
            type="int" />


        <variable
            name="handler"
            type="GridItemHandler" />
    </data>


    <android.support.v7.widget.CardView
        android:id="@+id/item_cv"
        style="@style/BoxCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:longClickable="true"
        card_view:cardBackgroundColor="@{time.isOnOff() ? @color/common_white : @color/common_grey}">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/item_cb"
                style="@style/Grid_Item_DeleteBtn"
                android:layout_gravity="top|end"
                android:checked="@{adp.isSelected(position)}"
                android:onClick="@{handler.selectItemEvent}"
                android:visibility="@{adp.isActionMode() ? View.VISIBLE  : View.INVISIBLE}" />

            <com.timekeeping.widget.FontTextView
                android:id="@+id/time_tv"
                style="@style/Time_TextView"
                android:layout_gravity="center"
                android:text="@{com.timekeeping.utils.Utils.formatTime(time)}" />


            <LinearLayout
                style="@style/Buttons"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="horizontal">

                <View
                    android:id="@+id/edit_btn"
                    style="@style/Grid_ButtonFloatSmall"
                    android:onClick="@{handler.editTimeEvent}"
                    android:background="@drawable/ic_edit"
                    android:visibility="@{adp.isActionMode() ? View.INVISIBLE : View.VISIBLE}" />


                <View
                    android:id="@+id/on_off_btn"
                    style="@style/Grid_ButtonFloatSmall"
                    android:onClick="@{handler.switchOnOffTimeEvent}"
                    android:background="@drawable/ic_on"
                    android:visibility="@{adp.isActionMode() ? View.INVISIBLE : View.VISIBLE}" />


                <View
                    android:id="@+id/delete_btn"
                    style="@style/Grid_ButtonFloatSmall"
                    android:onClick="@{handler.deleteTimeEvent}"
                    android:background="@drawable/ic_delete"
                    android:visibility="@{adp.isActionMode() ? View.INVISIBLE : View.VISIBLE}" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>