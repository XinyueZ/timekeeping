<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/error_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_main_horizontal_margin"
    android:paddingRight="@dimen/activity_main_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <GridView
            android:id="@+id/schedule_gv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="130dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:horizontalSpacing="0dp"
            android:verticalSpacing="0dp"
            android:gravity="center"
            android:layoutAnimation="@anim/grid_wave_scale" />

        <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/add_new_time_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/common_blue"
            android:layout_gravity="right|bottom"
            materialdesign:iconFloat="@drawable/ic_action_new" />

    </FrameLayout>


</LinearLayout>
