<resources>

    <style name="Time_TextView">
        <item name="font">light</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>


    <style name="Buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="Grid_ButtonFloatSmall">
        <item name="android:layout_width">@dimen/size_small_float_btn</item>
        <item name="android:layout_height">@dimen/size_small_float_btn</item>
        <item name="android:layout_marginRight">@dimen/padding_small_float_btn</item>
        <item name="android:layout_marginBottom">@dimen/padding_small_float_btn</item>
    </style>

    <style name="Grid_Item_DeleteBtn">
        <item name="android:src">@drawable/ic_toggle_check_box</item>
        <item name="android:background">@color/common_transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/grid_item_delete_btn_margin</item>
    </style>

    <style name="Drawer_TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="font">regular</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>

    </style>

    <style name="ActionBar_ToolBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="theme">@style/AppTheme</item>
        <item name="android:popupTheme">@style/AppTheme</item>
        <item name="popupTheme">@style/AppTheme</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="background">?attr/colorPrimary</item>
    </style>


    <style name="BoxCardView">
        <item name="contentPadding">0dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardMaxElevation">3dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">1dp</item>
    </style>

    <style name="NavDrawerItem" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textColorSecondary">@color/primary_color</item>
    </style>
</resources>
