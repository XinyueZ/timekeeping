<resources>
    <style name="Time_TextView">
        <item name="font">light</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="Grid_ButtonFloatSmall">
        <item name="android:layout_width">@dimen/size_small_float_btn</item>
        <item name="android:layout_height">@dimen/size_small_float_btn</item>
        <item name="android:background">@color/common_blue</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginRight">@dimen/padding_small_float_btn</item>
        <item name="android:layout_marginBottom">@dimen/padding_small_float_btn</item>
    </style>

    <style name="Grid_Item_DeleteBtn">
        <item name="android:visibility">invisible</item>
        <item name="android:background">@color/common_mid_grey</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">@dimen/grid_item_delete_btn_margin</item>
    </style>

    <style name="Drawer_TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="font">regular</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>

    </style>

    <style name="ActionBar_ToolBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="theme">@style/AppTheme</item>
        <item name="android:popupTheme">@style/AppTheme</item>
        <item name="popupTheme">@style/AppTheme</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="background">?attr/colorPrimary</item>
    </style>

    <style name="AddNew_Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>
</resources>
