<resources>
    <style name="Time_TextView">
        <item name="font">light</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="Grid_ButtonFloatSmall">
        <item name="android:layout_width">@dimen/size_small_float_btn</item>
        <item name="android:layout_height">@dimen/size_small_float_btn</item>
        <item name="android:background">@color/common_blue</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginRight">@dimen/padding_small_float_btn</item>
        <item name="android:layout_marginBottom">@dimen/padding_small_float_btn</item>
    </style>

    <style name="Grid_Item_DeleteBtn">
        <item name="android:visibility">invisible</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">@dimen/grid_item_delete_btn_margin</item>
    </style>

    <style name="Drawer_TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="font">thin</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>

    </style>
</resources>
